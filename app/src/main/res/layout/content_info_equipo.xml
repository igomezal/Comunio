<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_info_equipo" tools:context="com.ps.comunio.infoEquipo"
        android:background="@drawable/ceped">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:alpha="0.9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Armetico de Matriz"
                android:id="@+id/tvEquipo"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageEscudo"
                android:layout_toEndOf="@+id/imageEscudo" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageEscudo"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:src="@drawable/madrid"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Valoracion"
                android:id="@+id/tvValoracion"
                android:layout_below="@+id/tvEquipo"
                android:layout_toRightOf="@+id/imageEscudo"
                android:layout_toEndOf="@+id/imageEscudo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Puntos: 10"
                android:id="@+id/tvPuntos"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#FE9A2E"
                android:minWidth="120dp"
                android:nestedScrollingEnabled="false"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvEquipo"
                android:layout_alignEnd="@+id/tvEquipo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:alpha="0.9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Equipo"
                android:id="@+id/textView9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="#04B431"
                android:autoText="true"
                android:textColor="#ffffff" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lvEquipo"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>
    <Button android:id="@+id/floating_button19"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Floating"
        android:drawableLeft="@drawable/ic_coins_s"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_gravity="right|bottom"/>
</FrameLayout>
